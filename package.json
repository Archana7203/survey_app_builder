{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:*\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "heroku-postbuild": "npm --workspace apps/web run build && npx copyfiles -u 1 apps/web/src/data/**/* apps/web/dist && npm --workspace apps/api run build"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "validator": "^13.15.15"
  }
}
